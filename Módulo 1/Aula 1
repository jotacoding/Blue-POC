//Operadores usar "+" antes de prompt para indicar que é um number e não uma string
let numero1 = +prompt('digite um número: ');
let numero2 = +prompt('digite outro número: ');

//Guardando resultados (assim podemos usar mais a frente caso quisermos)
let soma = numero1 + numero2;
let sub = numero1 - numero2;
let mult = numero1 * numero2;
let div = numero1 / numero2;


console.log('a soma dos numeros é', soma); 
console.log('a subtração dos numeros é', sub);
console.log('a multiplicação dos numeros é', mult);
console.log('a divisão dos numeros é', div);


console.log();
