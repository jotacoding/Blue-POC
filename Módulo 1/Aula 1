console.clear(); // Usado para limpar o terminal automaticamente ou ao digitar clear no terminal (ctrl + L tbm funciona). 

const prompt = require('prompt-sync')(); // Para instalar o prompt é: npm install prompt-sync.
// Fazer essa linha sempre q usar prompt

/*
